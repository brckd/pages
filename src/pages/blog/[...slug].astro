---
import { type CollectionEntry, getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Illustration from "@comps/Illustration.astro";
import Tags from "@comps/Tags.astro";
import Info from "@comps/Info.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { pubDate, title, tags, banner, bannerAlt } = post.data;
const { Content, remarkPluginFrontmatter } = await post.render();
---

<Layout {...post.data}>
  <header class="article-header" slot="title">
    <Tags tags={tags} href="/blog" />
    <h1>{title}</h1>
    {
      banner && (
        <Illustration
          src={banner}
          alt={bannerAlt}
          id="article-image"
          loading="eager"
        />
      )
    }
    <Info
      readTime={remarkPluginFrontmatter.readingTime.minutes}
      pubDate={pubDate}
    />
  </header>
  <Content components={{ img: Illustration }} />
</Layout>

<style>
  #article-image {
    margin-bottom: var(--spacing-gap);
  }
</style>
