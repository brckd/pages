---
import Webring from "@comps/Webring.astro";
import Stack from "@comps/Stack.astro";
import Item from "@comps/Item.astro";
---

<Stack aria-label="webrings" class="webrings">
  <Item
    ><Webring
      name="Catppuccin"
      baseURL="https://ctp-webr.ing/"
      prevURL="https://ctp-webr.ing/bricked/previous"
      nextURL="https://ctp-webr.ing/bricked/next"
    /></Item
  >
  <Item
    ><Webring
      name="Nix"
      baseURL="https://nixwebr.ing/"
      prevURL="https://nixwebr.ing/prev/bricked"
      nextURL="https://nixwebr.ing/next/bricked"
    />
  </Item>
</Stack>

<style>
  .webrings {
    display: flex;
    width: 100%;
    flex-direction: column;
    gap: var(--spacing-gap);
  }
</style>
