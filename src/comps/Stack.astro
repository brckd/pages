---
export interface Props extends astroHTML.JSX.HTMLAttributes {
  direction?: "row" | "column";
  display?: "box" | "inline";
}

const {
  direction = "column",
  display = "box",
  class: className,
  "class:list": classList,
} = Astro.props;
---

<ul
  class:list={[["stack", direction, display], classList, className]}
  {...Astro.props}
>
  <slot />
</ul>

<style>
  .stack {
    all: unset;
    flex-wrap: wrap;

    &.box {
      display: flex;
      gap: var(--spacing-gap);
    }

    &.inline {
      display: inline-flex;
      gap: 1ch;
    }

    &.row {
      flex-direction: row;
    }

    &.column {
      flex-direction: column;
    }
  }
</style>
