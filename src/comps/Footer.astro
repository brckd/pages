---
import Webrings from "@comps/Webrings.astro";
---

<footer>
  <div class="content">
    <span>&copy; 2023 - 2025 bricked</span>
    <Webrings />
  </div>
</footer>
<style>
  footer {
    width: 100%;
    background: rgb(var(--color-mantle));
    margin: 0 auto;
    padding: var(--spacing-padding);
    box-sizing: border-box;

    > :global(*) {
      --color-mantle: var(--color-crust);
    }
  }

  .content {
    max-width: var(--size-content-width);
    text-align: center;
    width: 100%;
    margin: 0 auto;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    flex-direction: column;
    gap: var(--spacing-gap);
  }
</style>
