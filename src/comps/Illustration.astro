---
import {
  Image,
  type LocalImageProps,
  type RemoteImageProps,
} from "astro:assets";

type Props = (LocalImageProps | RemoteImageProps) &
  astroHTML.JSX.HTMLAttributes;

const { alt, class: className, "class:list": classList } = Astro.props;
---

<figure class:list={["illustration", classList, className]}>
  <Image width={800} {...Astro.props} />
  <figcaption>{alt}</figcaption>
</figure>

<style>
  .illustration {
    all: unset;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-gap);
    border-radius: var(--radius-layout);
    background: rgb(var(--color-mantle));
    padding: var(--spacing-padding);

    img {
      object-fit: contain;
      max-width: 800px;
      max-height: 360px;
      width: 100%;
      height: 100%;
      border-radius: var(--radius-layout);
    }

    figcaption {
      font-size: smaller;
      color: rgb(var(--color-subtext1));
      text-align: justify;
    }
  }
</style>
