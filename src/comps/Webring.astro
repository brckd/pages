---
interface Props {
  slug?: string;
  name: string;
  baseURL: URL | string;
  prevURL: URL | string;
  nextURL: URL | string;
}

let { slug, name, baseURL, prevURL, nextURL } = Astro.props;
slug ??= name.toLowerCase().replace(" ", "-");
---

<nav class="webring" aria-label={`${name} webring`} id={`webring-${slug}`}>
  <a class="webring-prev" aria-label="previous webring member" href={prevURL}
    >&lt;</a
  >
  <a class="webring-base" aria-label="webring index" href={baseURL}
    >{name} Webring</a
  >
  <a class="webring-next" aria-label="next webring member" href={nextURL}
    >&gt;</a
  >
</nav>

<style>
  a {
    text-decoration: none;
  }

  .webring-base {
    flex: 1;
  }

  .webring {
    display: flex;
    background: rgb(var(--color-mantle));
    gap: var(--spacing-gap);
    padding: var(--spacing-padding);
    border-radius: var(--radius-layout);
    justify-content: space-between;
  }
</style>
